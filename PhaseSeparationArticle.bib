issn = {1553-7358},
journal = {PLoS Computational Biology},
month = {jun},
number = {6},
pages = {e1000810},
pmid = {20548957},
title = {{Polarizable Water Model for the Coarse-Grained MARTINI Force Field}},
url = {https://dx.plos.org/10.1371/journal.pcbi.1000810},
