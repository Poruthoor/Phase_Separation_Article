journal = {eLife},
month = {aug},
pages = {1--29},
pmid = {27484239},
title = {{Real-time imaging of Huntingtin aggregates diverting target search and gene transcription}},
url = {https://elifesciences.org/articles/17056},
volume = {5},
year = {2016}
}

